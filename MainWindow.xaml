<Window x:Class="NekoControlEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:wpg="clr-namespace:System.Windows.Controls"
        xmlns:local="clr-namespace:NekoControlEditor"
        mc:Ignorable="d"
        Title="네코 플레이어 컨트롤 편집기" Height="768" Width="1124" Background="#FFF0F0F0" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0"
                   Grid.Column="0"
                   Fill="#D3D3D3"/>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Height="36"
                    Margin="0,1,0,0"
                    VerticalAlignment="Top"
                    Panel.ZIndex="50">
            <Button Content="새 파일"
                    Height="32"
                    Width="64"
                    Margin="2, 2, 0, 2"/>
            <Button Content="열기"
                    Height="32"
                    Width="64"/>
            <Button Content="저장"
                    Height="32"
                    Width="64"
                    Margin="0, 2, 4, 2"/>
            <Button x:Name="CreateControlDirection4Button"
                    Content="4방향 패드"
                    Height="32"
                    Width="64"
                    Click="CreateControlDirection4Button_Click"/>
            <Button Content="8방향 패드"
                    Height="32"
                    Width="64"/>
            <Button Content="가상키"
                    Height="32"
                    Width="64"/>
            <Button Content="버튼"
                    Height="32"
                    Width="64"/>
            <Button Content="토글 버튼"
                    Height="32"
                    Width="64"
                    Margin="0, 2, 4, 2"/>
            <Button x:Name="ResolutionButton"
                    Content="해상도"
                    Height="32"
                    Width="64"
                    Margin="0, 2, 4, 2" Click="ResolutionButton_Click"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="RenderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="640"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="480"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <local:CheckerBoard Grid.Row="1"
                                    Grid.Column="1"/>
                <!--
                <Rectangle Grid.Row="1"
                           Grid.Column="1"
                           Stroke="Black"
                           StrokeThickness="1"
                           Fill="#FFFFFF"/>
-->
                <Canvas x:Name="RenderCanvas"
                        Grid.Row="1"
                        Grid.Column="1"
                        x:FieldModifier="public"/>
            </Grid>
            <Rectangle Grid.Column="1"
                       Fill="#FFB8B8B8"/>
            <wpg:WpfPropertyGrid x:Name="PropertyGrid"
                                 Margin="0,0,0,0"
                                 Grid.Column="1"/>
        </Grid>
        <StatusBar Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Height="20"
                   Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}"
                   Background="#FF7C7C7C"/>
    </Grid>
</Window>
