<Window x:Class="NekoControlEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NekoControlEditor"
        mc:Ignorable="d"
        Title="네코 플레이어 컨트롤 편집기" Height="572" Width="800">
    <Grid Margin="0,0,0,0" VerticalAlignment="Top" Height="517" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0" Fill="#D3D3D3"/>
        <Rectangle Grid.Row="1" Grid.Column="0" Fill="#F3F3F3"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Height="36" Margin="1,1,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="522">
            <Button Content="새 파일" Height="32" Width="64" Margin="2, 2, 0, 2"/>
            <Button Content="열기" Height="32" Width="64"/>
            <Button Content="저장" Height="32" Width="64" Margin="0, 2, 4, 2"/>
            <Button Content="4방향 패드" Height="32" Width="64"/>
            <Button Content="8방향 패드" Height="32" Width="64"/>
            <Button Content="가상키" Height="32" Width="64"/>
            <Button Content="버튼" Height="32" Width="64"/>
            <Button Content="토글 버튼" Height="32" Width="64" Margin="0, 2, 4, 2"/>
        </StackPanel>
        <Canvas Grid.Row="1" HorizontalAlignment="Left" Width="640" Margin="0,0,0,0">
            <Image Source="image/dpad_none.png" Height="160" Canvas.Left="165" Canvas.Top="32" Width="180"/>
        </Canvas>
    </Grid>
</Window>
