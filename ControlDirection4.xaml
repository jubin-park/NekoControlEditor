<UserControl x:Class="NekoControlEditor.ControlDirection4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NekoControlEditor"
             mc:Ignorable="d" 
             d:DesignHeight="64" Width="64">

    <Canvas x:Name="MainCanvas"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown"
            MouseMove="MainCanvas_MouseMove"
            MouseUp="MainCanvas_MouseUp">

        <Image x:Name="ControlImage"
               Width="64"
               Height="64"
               Source="image/buildbot.png"
               Stretch="Fill"/>
        
        <local:ControlFrame x:Name="Frame"
                            Height="{Binding ElementName=MainCanvas, Path=ActualHeight}"
                            Width="{Binding ElementName=MainCanvas, Path=ActualWidth}"/>
    </Canvas>
</UserControl>
